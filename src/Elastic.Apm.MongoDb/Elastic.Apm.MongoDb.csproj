<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Elastic.Apm.MongoDb</RootNamespace>
    <AssemblyName>Elastic.Apm.MongoDb</AssemblyName>
    <PackageId>Elastic.Apm.MongoDb</PackageId>
    <Description>
      Elastic APM integration with the MongoDB.Driver package.
    </Description>
    <IsPackable>true</IsPackable>
  </PropertyGroup>
  
  <ItemGroup>
    <None Include="LICENSE">
      <Pack>True</Pack>
      <PackagePath>.</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="NOTICE">
      <Pack>True</Pack>
      <PackagePath>.</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MongoDB.Driver.Core" Version="2.4.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Elastic.Apm\Elastic.Apm.csproj" />
  </ItemGroup>

</Project>

<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- needed because of MockApmServer version -->
    <TargetFramework>net7.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <!-- Don't run Roslyn analyzers as part of build. The StyleCop analyzers conflict with editorconfig -->
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <RunAnalyzersDuringLiveAnalysis>false</RunAnalyzersDuringLiveAnalysis>
    <RunAnalyzers>false</RunAnalyzers>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="$(SrcProfiler)\Elastic.Apm.Profiler.Managed\Elastic.Apm.Profiler.Managed.csproj"/>
    <ProjectReference Include="..\..\Elastic.Apm.Tests.MockApmServer\Elastic.Apm.Tests.MockApmServer.csproj"/>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Oracle.ManagedDataAccess.Core" Version="3.21.90"/>
    <PackageReference Include="Proc" Version="0.6.2"/>
    <PackageReference Include="Testcontainers.Kafka" Version="3.4.0" />
    <PackageReference Include="Testcontainers.MsSql" Version="3.4.0" />
    <PackageReference Include="Testcontainers.MySql" Version="3.4.0" />
    <PackageReference Include="Testcontainers.Oracle" Version="3.4.0" />
    <PackageReference Include="Testcontainers.PostgreSql" Version="3.4.0" />
    <PackageReference Include="Testcontainers.RabbitMq" Version="3.4.0" />
    <PackageReference Include="System.Data.SqlClient" Version="4.8.5"/>
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\xunit.runner.json" Link="xunit.runner.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

</Project>
